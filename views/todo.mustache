<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>

    <div class="container">
      <form action="/" method="post">
        <label for="todo">Todo: </label>
        <input type="text" name="todo" placeholder="Name">
        <input type="submit" value="Add Item">
      </form>
        {{#todo}}
          <div class="cell">
            {{#status}}
              <a href="/{{i}}">
                <div class="link-button">
                  <p>Complete</p>
                </div>
              </a>
              {{todo}}
            {{/status}}
            {{^status}}
              <a href="/{{i}}">
                <div class="link-button">
                  <p>Incomplete</p>
                </div>
              </a>
              {{todo}}
            {{/status}}
          </div>
        </div>
        {{/todo}}
        <hr>
        <h2>Completed Items</h2>
        {{#todo}}
          {{#status}}
            <li>{{todo}}</li>
          {{/status}}
        {{/todo}}
  </body>
</html>
