<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>

    <div class="container">
      <form action="/" method="post">
        <label for="todo">Todo: </label>
        <input type="text" name="todo" placeholder="Name">
        <input type="submit" value="Add Item">
      </form>
      <hr>
      <h2>Completed Items</h2>
        {{#todo}}
          <div class="cell">
            {{^complete}}
              <a href="/update/{{id}}">
                <div class="link-button">
                  <p>Incomplete</p>
                </div>
              </a>
              {{todo}}
            {{/complete}}
          </div>
        </div>
        {{/todo}}
        <hr>
        <h2>Completed Items</h2>
        {{#todo}}
          <div class="cell">
            {{#complete}}
              <a href="/delete/{{id}}">
                <div class="link-button">
                  <p>Delete</p>
                </div>
              </a>
              {{todo}}
            {{/complete}}
          </div>
        {{/todo}}
  </body>
</html>
